@model GroupViewModel
@{
    var faculties = (List<FacultyViewModel>)ViewData["faculties"];
    var facultiesList = new List<SelectListItem>(faculties.Select(x => new SelectListItem() { Value = x.Id, Text = x.Name }));
}

@using (Html.BeginForm(FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FacultyId)
        @Html.DropDownListFor(m => m.FacultyId, facultiesList, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.FacultyId)
    </div>

    <button type="submit" class="btn btn-primary">Зберегти</button>
    <a asp-action="Index" asp-controller="Group" class="btn btn-primary btn-back">Назад</a>
}
