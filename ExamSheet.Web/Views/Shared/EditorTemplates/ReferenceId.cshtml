@model string
@{
    var teachers = (List<TeacherViewModel>)ViewData["Teachers"];
    var deaneries = (List<DeaneryViewModel>)ViewData["Deaneries"];

    var teachersGroup = new SelectListGroup() { Name = "Teacher" };
    var deaneriesGroup = new SelectListGroup() { Name = "Deanery" };
    var items = new List<SelectListItem>();
    items.AddRange(teachers.Select(x => new SelectListItem() { Value = x.Id, Text = string.Format("{0} {1}", x.Surname, x.Name), Group = teachersGroup }));
    items.AddRange(deaneries.Select(x => new SelectListItem() { Value = x.Id, Text = string.Format("{0}", x.Name), Group = deaneriesGroup }));
}

@Html.DropDownList(string.Empty, items, htmlAttributes: new { @class = "form-control reference-id" })